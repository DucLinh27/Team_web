{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="Carname">CarName:</label>
        {{ form_widget(form.Carname,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Task name'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="CarPrice">Price:</label>
        {{ form_widget(form.CarPrice,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Price'
            }
        }) }}
    </div>


    <input type="submit" name="edit_car" value="Edit" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
